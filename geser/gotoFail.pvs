add_cmd:Commands = cons(gotoZ(1,4), cons(inc(0), cons(dec(0), cons(goto(0), cons(stop, null)))))

add_gp: Gp = (#
  config:= (#
   counter := 0,
   storage := cons(0 ,cons(2,cons(3,null)))
  #),
  cmds := add_cmd#)


add_gen:FORMULA
 FORALL(i:nat,j:nat):nth( execute((#
  config:= (#
   counter := 0,
   storage := cons(i ,cons(j,null))
  #),
   cmds := add_cmd #)),0) = i + j

End gotoF
